extends layouts/main-layout.pug

block styles
  link(rel="stylesheet", href="/css/product.css")

block content
  main
    if prods.length > 0
      div.grid
        each product in prods
          article.card Product-items
            header.card__header
              h1.product__title #{product.title}
            div.card__image
              img(src="https://raw.githubusercontent.com/mumu-pika/mumu-pika/main/pikachu.gif", alt="pika")
            div.card__content
              h2.product__price $9.9
              p.product__description it is a description
            div.card__actions
              button.btn Add to Cart
    else
      h1 No products